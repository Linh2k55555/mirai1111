{
  "name": "qrbank",
  "version": "1.5.7",
  "description": "Generate QR codes for bank transactions in Vietnam",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "lint": "eslint --ext .ts .",
    "release": "npm run build && npm publish",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trinhminhhieu/qrbank.git"
  },
  "keywords": [
    "qrbank",
    "QRBank",
    "pay",
    "banking",
    "payments"
  ],
  "author": "Trinh Minh Hieu",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/jest": "^28.1.3",
    "@types/qrcode": "^1.5.5",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "eslint": "^8.50.0",
    "jest": "^28.1.1",
    "qrto": "^0.0.3",
    "rimraf": "^5.0.0",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testEnvironment": "node"
  },
  "dependencies": {
    "qrcode": "^1.5.4"
